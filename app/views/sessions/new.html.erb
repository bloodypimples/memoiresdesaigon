<div class="sign_in">

  <div class="hero">
    <img src="/assets/logo-04.png">
  </div>

  <div class="wrapper">
    <h2>Sign In</h2>

    <% flash.each do |key, value| %>
      <div class="flash" id="<%= key %>">
        <%= value %>
      </div>
    <% end %>

    <%= simple_form_for :user, url: signin_path do |f| %>
      <%= f.input :email %>
      <%= f.input :password %>
      <%= f.submit "Sign in" %>
    <% end %>
  </div>

</div>
