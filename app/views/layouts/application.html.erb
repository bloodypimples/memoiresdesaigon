<!DOCTYPE html>
<html>
  <head>
    <title>Memoires De Saigon</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>

  <body>

    <div class="wrapper">

      <div class="nav-wrapper">
        <div class="nav">
          <a href="/">
            <div class="logo">
              <div class="normal">
                <img src="/assets/logo-memoires2-300x249.png">
              </div>
              <div class="scrolled">
                <img src="/assets/logo-04-300x232.png">
              </div>
            </div>
          </a>
          <div class="hamburger">≡</div>
          <ul class="items">
            <li class="exit">×</li>
            <li><%= link_to "Home", root_path, class: current_page(root_path) %></li>
            <li><%= link_to "Stay", stay_path, class: current_page(stay_path) %></li>
            <li><%= link_to "Explore", explore_path, class: current_page(explore_path) %></li>
            <li><%= link_to "Share", share_path, class: current_page(share_path) %></li>
            <li><%= link_to "Contact", contact_path, class: current_page(contact_path) %></li>
          </ul>
        </div>
      </div>

      <div class="body">
        <%= yield %>
      </div>

      <div class="footer">
        <div class="content-wrapper">
          <div class="logo-col">
            <div class="logo"></div>
          </div>
          <div class="about-us">
            <h2>ABOUT US</h2>
            <div class="seperator"></div>
            <p>Mémoires de Saigon</p>
            <p>252A1 Co Bac</p>
            <p>Co Giang Ward, District 1</p>
            <p>Ho Chi Minh City, Vietnam</p>
            <p>P: +02 866.799.1911</p>
            <p>M: Memoires.saigon@gmail.com</p>
          </div>
          <div class="recent-posts">
            <h2>RECENT</h2>
            <div class="seperator"></div>
            <% get_articles.each do |article| %>
              <p><%= article.name %></p>
            <% end %>
          </div>
        </div>
      </div>

    </div>

    <!--Start of Tawk.to Script-->
